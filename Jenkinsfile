pipeline {
    agent any
    stages {
        stage("build") {
            steps {
                script {
                    echo "building the application"
                }
            }
        }
        stage("Test") {
            steps {
                script {
                    echo "Testing the application"
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    echo "deploying the application"
                }
            }
        }
    }   
}
